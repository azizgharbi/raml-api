{
	"type": "object",
	"$schema": "http://json-schema.org/draft-03/schema",
	"id": "user-schema",
	"required": true,
	"properties": {
		"name": {
			"type": "string",
			"minLength": 4,
			"title": "Name",
			"description": "Enter your name please",
			"required": true
		},
		"email": {
			"type": "string",
			"title": "Email",
			"description": "Enter your email please",
			"pattern": "^\\S+@\\S+$",
			"required": true
		}
	}
}